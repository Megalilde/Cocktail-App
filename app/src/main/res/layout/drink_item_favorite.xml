<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="24dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_card_favorite"
        android:layout_width="155dp"
        android:layout_height="200dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_image_favorite"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/image_description"
                android:scaleType="fitXY" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_card_favorite">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:elevation="10dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/idtitle"
                android:textColor="@color/safety_orange"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/item_favorite_id"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:elevation="10dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/idtitle"
                android:textColor="@color/platinum"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:elevation="10dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/drink_title"
                android:textColor="@color/safety_orange"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/item_favorite_title"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:elevation="10dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/drink_title"
                android:textColor="@color/platinum"
                android:textSize="16sp"
                android:textStyle="bold"/>



        </LinearLayout>







    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>